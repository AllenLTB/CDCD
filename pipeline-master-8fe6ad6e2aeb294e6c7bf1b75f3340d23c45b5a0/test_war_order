node () {
def workspace = pwd()
def branch = 'test'

stage 'pull'
    dir('config'){
        git branch: 'master', credentialsId: 'jenkins', url: 'http://47.94.250.239/cgd-base_dev/config.git'        
    }
    
    dir('parent'){
        git branch: branch, credentialsId: 'jenkins', url: 'http://47.94.250.239/cgd-base_dev/parent.git'        
    }
    
    dir('order'){
        git branch: release_branch, credentialsId: 'jenkins', url: 'http://47.94.250.239/cgd-eCommerce_dev/order.git'        
    }

stage 'build'
    sh"""

        cd $workspace/parent
       /usr/local/maven/bin/mvn clean install -Ptest
 
        cd $workspace/order
       /usr/local/maven/bin/mvn clean install -Ptest 
      
    """

stage 'deploy-edas'
    sh'''
        fn=$(date +%m%d%H%M)
        en=TEST
        mo=test_order

		mkdir -p /jen_data/$en/$mo/backup/$fn
		touch /jen_data/$en/$mo/q.war
		mv /jen_data/$en/$mo/*.war /jen_data/$en/$mo/backup/$fn/
		find $workspace -name *.war |xargs -i cp {} /jen_data/$en/$mo/
		chmod 777 /jen_data/$en/$mo/*.war
		java -jar /jen_data/API/edas_unicom_api_1.0.jar test deploy 75f647b9-8f77-426a-9aff-3140cbf2fb7b http://10.0.2.9/$en/$mo/order.war 
    '''
}