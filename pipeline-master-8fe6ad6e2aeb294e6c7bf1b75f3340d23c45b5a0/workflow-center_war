node () {
def workspace = pwd()
def branch = 'mvn_refactor'
def CATALINA_HOME = '/taobao-tomcat/workflow-center_war'



 stage 'checkout'

    dir('parent'){
        git branch: dev, credentialsId: 'jenkins', url: 'http://47.94.250.239/cgd-base_dev/parent.git'        
    }

    dir('workflow'){
        git branch: branch, credentialsId: 'jenkins', url: 'http://47.94.250.239/cgd-base_dev/workflow.git'        
    }



stage 'Build'
    sh"""
        cd $workspace/parent
       /usr/local/maven/bin/mvn clean install -Pdev

        cd $workspace/workflow/workflow-center
       /usr/local/maven/bin/mvn clean install -Pdev
       """



stage 'tomcat'
    sh"""
        JENKINS_NODE_COOKIE=dontKillMe

        ${CATALINA_HOME}/bin/shutdown.sh
        rm -rf ${CATALINA_HOME}/deploy/ROOT
        unzip $workspace/workflow/workflow-center/target/workflow-center.war -d ${CATALINA_HOME}/deploy/ROOT
        ${CATALINA_HOME}/bin/startup.sh
    """
}
